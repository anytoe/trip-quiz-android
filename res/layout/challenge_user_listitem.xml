<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/challenge_user_listitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/content_bg_topline" >

    <ImageView
        android:id="@+id/challenge_user_listitem_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp" >
    </ImageView>

    <LinearLayout
        android:id="@+id/challenge_user_listitem_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/challenge_user_listitem_title"
            style="@style/HeaderText"
            android:background="@color/transparent_dark"
            android:gravity="center_horizontal"
            android:padding="3dp"
            android:singleLine="true" />

        <LinearLayout
            android:id="@+id/challenge_user_listitem_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:minHeight="90dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/challenge_user_listitem_percentage"
                style="@style/TinyText"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle_bg"
                android:padding="2dp"
                android:textColor="@color/grey_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/challenge_user_listitem_group"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle_bg"
                android:padding="10dp"
                android:src="@drawable/overview_group" >
            </ImageView>

            <ImageView
                android:id="@+id/challenge_user_listitem_single"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle_bg"
                android:padding="10dp"
                android:src="@drawable/overview_single" >
            </ImageView>

            <ImageView
                android:id="@+id/challenge_user_listitem_lock"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle_bg"
                android:padding="10dp"
                android:src="@drawable/overview_lock" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>