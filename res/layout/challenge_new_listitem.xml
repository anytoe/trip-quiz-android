<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/challenge_new_listitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/content_bg_topline"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/challenge_new_listitem_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp" >
    </ImageView>

    <LinearLayout
        android:id="@+id/challenge_new_listitem_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/challenge_new_listitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_dark"
            android:gravity="center_horizontal"
            android:padding="3dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/challenge_new_listitem_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_medium"
            android:gravity="left|center_vertical"
            android:padding="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:id="@+id/challenge_new_listitem_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_medium" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/challenge_new_listitem_group"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle_bg"
                    android:padding="10dp"
                    android:src="@drawable/overview_group" >
                </ImageView>

                <ImageView
                    android:id="@+id/challenge_new_listitem_single"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle_bg"
                    android:padding="10dp"
                    android:src="@drawable/overview_single" >
                </ImageView>

                <ImageView
                    android:id="@+id/challenge_new_listitem_lock"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle_bg"
                    android:padding="10dp"
                    android:src="@drawable/overview_lock" >
                </ImageView>

                <ImageView
                    android:id="@+id/challenge_new_listitem_addremove"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/circle_bg"
                    android:clickable="true"
                    android:padding="10dp"
                    android:src="@drawable/overview_plus_grey" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>